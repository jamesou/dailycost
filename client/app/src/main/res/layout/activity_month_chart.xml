<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_f3f3f3" android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/char_iv_back"
                   android:src="@mipmap/it_back"
                   android:layout_marginLeft="10sp"
                   android:onClick="onClick"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/account_info"
                  android:layout_centerInParent="true"
                  android:textStyle="bold"
                  android:textSize="18sp"/>
        <Switch
                android:textOn="Year"
                android:textOff="Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="50sp"
                android:showText="true"
                android:id="@+id/selectSwitch"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/char_iv_rill"
                   android:src="@mipmap/it_calendar"
                   android:layout_alignParentRight="true"
                   android:paddingRight="10sp"
                   android:onClick="onClick"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:padding="10sp"
                  android:layout_marginTop="20sp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/char_tv_date"
                  android:text="4/2024 Bills"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:textSize="16sp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/char_tv_out"
                  android:text="A total of 1 payment, $103.0"
                  android:textColor="@color/black"
                  android:layout_marginTop="10sp"
                  android:textSize="14sp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/char_tv_in"
                  android:text="A total of 2 payment, $163.32"
                  android:textColor="@color/black"
                  android:layout_marginTop="10sp"
                  android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="10sp"
                  android:gravity="center">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/char_btn_out"
                android:text="Expenditure"
                android:background="@drawable/main_recordbtn_bg"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:onClick="onClick"
                android:layout_marginRight="10sp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/char_btn_in"
                android:text="Income"
                android:background="@drawable/dialog_btn_bg"
                android:textStyle="bold"
                android:textColor="@color/green_006400"
                android:onClick="onClick"
                android:layout_marginLeft="10sp"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/char_vp"/>
</LinearLayout>