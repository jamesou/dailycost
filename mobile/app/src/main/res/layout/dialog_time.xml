<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

        <DatePicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/dialog_time_dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/please_input_time"
                  android:padding="10sp"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="10sp">
            <EditText android:layout_width="60sp" android:layout_height="wrap_content"
                      android:id="@+id/dialog_time_et_hour"
                      android:inputType="number"
                      android:textAlignment="center"
                      android:gravity="center_horizontal"
                      android:maxLength="2"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20sp"/>
            <EditText android:layout_width="60sp" android:layout_height="wrap_content"
                      android:id="@+id/dialog_time_et_minute"
                      android:inputType="number"
                      android:textAlignment="center"
                      android:gravity="center_horizontal"
                      android:maxLength="2" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:orientation="horizontal">
            <Button android:layout_width="80sp" android:layout_height="wrap_content"
                    android:id="@+id/dialog_time_btn_cancel"
                    android:text="@string/cancel"
                    android:background="@null"
                    android:textColor="@color/lightBlue"
                    android:layout_marginRight="20sp"/>
            <Button android:layout_width="80sp" android:layout_height="wrap_content"
                    android:id="@+id/dialog_time_btn_ensure"
                    android:text="@string/ensure"
                    android:background="@null"
                    android:textColor="@color/lightBlue"
                    android:layout_marginRight="20sp"/>

        </LinearLayout>
</LinearLayout>